<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	>
	<Button android:id="@+id/btn_start1" android:text="Start H1" 
		android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:layout_weight="1"/>
	<Button android:id="@+id/btn_start2" android:text="Start H2" 
		android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:layout_weight="1"/>
	<Button android:id="@+id/btn_add" android:text="Add a message" 
		android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:layout_weight="1"/>
	<Button android:id="@+id/btn_exit" android:text="Exit" 
		android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:layout_weight="1"/>
</LinearLayout>
<TextView android:id="@+id/text_out" 
    android:text="@string/first_line"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:background="#444444" 
    />
</LinearLayout>
